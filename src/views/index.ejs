<%- include('includes/head'); -%>
  <%- include('includes/nav');-%>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class=" text-center">Agenda </h1>
          <p class="text-center lead">Seus contatos estão abaixo</p>

          <% include('includes/messages')%>

            <div class="responsive-table">
              <table class="table my-3">
                <tr>
                  <td>Nome</td>
                  <td>Sobrenome</td>
                  <td>Telefone</td>
                  <td>Email</td>
                </tr>
                <%if(contatos.length>0){%>
                  <% contatos.forEach(contato=>{%>

                    <tr>
                      <td>
                        <%-contato.name%>
                      </td>
                      <td>
                        <%-contato.lastName%>
                      </td>
                      <td>
                        <%-contato.tel%>
                      </td>
                      <td>
                        <%-contato.email%>
                      </td>
                      <td>
                        <a class="btn text-primary" href="/contato/index/<%= contato._id%>">Editar</a>
                      </td>
                      <td>
                        <a class="text-danger btn" href="/contato/delete/<%=contato._id%>">Delete</a>
                      </td>
                    </tr>

                    <%});%>
                      <%}else{%>
                        <p class="text-center lead"> Não há contatos em sua agenda, clique em cadastrar para cadastrar
                          seus contatos.</p>
                        <%}%>
              </table>
            </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer'); -%>